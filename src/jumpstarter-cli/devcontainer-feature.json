{
  "id": "jumpstarter-cli",
  "version": "1.3.0",
  "name": "Jumpstarter CLI",
  "description": "Installs Jumpstarter CLI (jmp and j commands) as global tools via uv, with configurable driver packages for different use cases",
  "documentationURL": "https://github.com/the78mole/devcontainer-features/tree/main/src/jumpstarter-cli",
  "licenseURL": "https://github.com/the78mole/devcontainer-features/blob/main/LICENSE",
  "installsAfter": ["ghcr.io/devcontainers/features/python"],
  "options": {
    "version": {
      "type": "string",
      "proposals": ["latest"],
      "default": "latest",
      "description": "Version of jumpstarter-cli to install"
    },
    "packageRepo": {
      "type": "string",
      "proposals": [
        "jumpstarter",
        "pypi",
        "https://pkg.jumpstarter.dev/",
        "https://custom-repo.example.com/simple/"
      ],
      "default": "jumpstarter",
      "description": "Package repository: 'jumpstarter' (pkg.jumpstarter.dev), 'pypi', or custom URL (https://...)"
    },
    "packages": {
      "type": "string",
      "proposals": ["none", "testing", "all"],
      "default": "none",
      "description": "Package set: 'none' (CLI + admin only), 'testing' (+ essential drivers for local development), 'all' (+ all jumpstarter drivers)"
    }
  }
}
